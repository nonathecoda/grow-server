@using Microsoft.AspNetCore.Identity
@using Grow.Server.Model.Entities
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />

    <title>@ViewBag.Title - GROW by PionierGarage</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/plugins/paper-dashboard/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/paper-dashboard/css/paper-dashboard.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="wrapper ">

        <!-- Side bar for navigation -->
        <div class="sidebar" data-color="red" data-active-color="danger">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index" class="simple-text logo-normal">
                    <div class="logo-image-big">
                        <img src="~/img/grow_logo.png">
                    </div>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    @RenderSection("Navbar", required: true)
                </ul>
            </div>
        </div>

        <div class="main-panel">

            <a name="top"></a>

            <!-- Top bar for title and global actions -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">

                        <!-- Hamburger menu for mobile (opens/closes navbar above) -->
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>

                        <!-- Page title -->
                        <a class="navbar-brand" href="#top">@ViewData["Title"]</a>
                    </div>

                    <!-- Collapsable three-dot-menu for mobile (opens/closes navigation below) -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>

                    <!-- Space for global actions -->
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <partial name="Partials/_LoginPartial" />
                    </div>
                </div>
            </nav>

            <div class="content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer footer-black footer-white ">
                <div class="container-fluid">
                    <div class="row">

                        <!-- Left-adjusted links -->
                        <nav class="footer-nav">
                            <ul>
                                <li>
                                    <a asp-action="Index" asp-controller="Home" asp-area="">Back to main page</a>
                                </li>
                                <li>
                                    <a asp-action="Logout" asp-controller="Account" asp-area="Admin">Logout</a>
                                </li>
                            </ul>
                        </nav>

                        <!-- Right-adjusted copyright -->
                        <div class="credits ml-auto">
                            <span class="copyright">
                                ©
                                <script>document.write(new Date().getFullYear())</script> PionierGarage, Design by Creative Tim
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/plugins/paper-dashboard/js/core/popper.min.js"></script>
    <script src="/plugins/paper-dashboard/js/core/bootstrap.min.js"></script>
    <script src="/plugins/paper-dashboard/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="/plugins/paper-dashboard/js/plugins/chartjs.min.js"></script>
    <script src="/plugins/paper-dashboard/js/plugins/bootstrap-notify.js"></script>
    <script src="/plugins/paper-dashboard/js/paper-dashboard.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
