@model Grow.Server.Model.ViewModels.ErrorViewModel

@{
    ViewBag.Title = "Error";
}

<article id="main">

    <header class="special container">
        <span class="icon fa-user"></span>
        <h2>
            An <strong>Error</strong> has occurred
        </h2>
    </header>

    <section class="wrapper style4 container">
        <div class="content">
            <section>
                <header>
                    <h2>@Model.ErrorMessage</h2>
                </header>
                <div>
                    @Model.ErrorDetails
                </div>
            </section>
        </div>
    </section>

</article>
