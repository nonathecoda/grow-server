@model IEnumerable<Grow.Data.Entities.CommonQuestion>

@{
    ViewData["Title"] = "FAQ";
    Layout = "Layouts/_BackendLayout";
}

@section Styles {
    <style>
        .toc ul {
            list-style: none;
        }

        .question[data-toggle] {
            cursor: pointer;
        }

        .answer {
            white-space: pre-wrap;
        }
    </style>
}

<div class="card">
    <div class="card-header text-center">
        <h3>FAQ</h3>
    </div>
    <div class="card-body toc">
        <strong>All Questions</strong>
        <ul>
            @foreach (var question in Model)
            {
                <li><a href="#@question.Name">@question.Question</a></li>
            }
        </ul>
    </div>
</div>

@foreach (var question in Model)
{
    <div class="card" id="@question.Name">
        <div class="card-header question" data-toggle="collapse" data-target="#q-@question.Id" role="button" aria-controls="q-@question.Id" aria-expanded="false">
            <h5><i class="nc-icon nc-minimal-down"></i>&nbsp;&nbsp;@question.Question</h5>
        </div>
        <div class="card-body collapse hide answer" id="q-@question.Id">@question.Answer</div>
    </div>
}